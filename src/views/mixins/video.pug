mixin video(info)
    div
        h4
            a(href=`/videos/${info.id}`)=info.title
        ul 
            li #{info.rating}/5
            li #{info.comments} #{info.comments <= 1 ? "comment" : "comments"}
            li Posted #{info.createAt}
            li #{info.views} #{info.views <= 1 ? "view" : "views"}